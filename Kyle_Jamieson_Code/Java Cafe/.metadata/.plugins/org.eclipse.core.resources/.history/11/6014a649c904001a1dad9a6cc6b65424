package com.cafe;

public class Cafe 
{
	private String food[] = {"Turkey sandwich", 
			 				 "House Salad", 
			 				 "Soup of the Day", 
			 				 "Grilled salmon", 
			 				 "Pulled Pork sandwich",
			 				 "Wings",
			 				 "Double bacon cheeseburger"}; 

	private String drink[] = {"Orange Juice",
			  				  "Coffee",
			  				  "Green Tea",	
			  				  "Hot Chocolate",
			  				  "Strawberry Lemonaid",
			  				  "Ice Water"};		 
	
	Cafe()
	{
		loadFood();
		loadDrink();
	}
	
	int cafeMenuFood()
	{
		// Print out food
		System.out.print("FOOD\n");
		for (int i = 0; i < food.length; i++)
		{
			System.out.print(i+1 + ") " + food[i] + '\n');
		}

		//Get selection
		
		return 0;
	}
	
	int cafeMenuDrink()
	{
		System.out.print("DRINKS\n");
		for (int i = 0; i < drink.length; i++)
		{
			System.out.print(i+1 + ") " + drink[i] + '\n');
		}


		
		
		return 0;
	}
	
	
	void loadDrink()
	{
		/*= {"Orange Juice",
		  "Coffee",
		  "Green Tea",	
		  "Hot Chocolate",
		  "Strawberry Lemonaid",
		  "Ice Water"};*/		
	}
	
	void loadFood()
