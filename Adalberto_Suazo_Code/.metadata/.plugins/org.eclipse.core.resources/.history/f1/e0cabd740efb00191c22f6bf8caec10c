package com.example.assignment1;

public class Bean {
	private int weightOfBeans ;
	private String color;
	private String name;
	

	
	public Bean(int weightOfBeans, String color, String name) {
		super();
		this.weightOfBeans = weightOfBeans;
		this.color = color;
		this.name = name;
	}
	//getters and setters
	public int getweightOfBeans() {
		return weightOfBeans;
	}
	public void setweightOfBeans(int weightOfBeans) {
		this.weightOfBeans = weightOfBeans;
	}
	public String getColor() {
		return color;
	}
	public void setColor(String color) {
		this.color = color;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	
	public static void info() {
		System.out.println("this is  a bean");
	}
	
	public void amountOfBeanObjs(int...a) {
		System.out.println("Number of bean objects: " + a.length);
	}
	
	public int weightOfBeans(int weightOfBeans) {
		return weightOfBeans;
	}
	public String toString(){//overriding the toString() method  
		  return "The name of this bean is " + name + " it weighs " + weightOfBeans + " has color " + color;
		 } 
}
