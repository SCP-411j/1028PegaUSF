package com.example.varargs;

public class MyClass {
	
	/*
	 * 
	 * Varargs - varable-length arguments
	 * a vargars method is a method that takes a variable
	 * number of arguments
	 * 
	 * */
	
	public static void main(String[] args) {
		fun();
		fun(1,2,3,100,856,4);
		fun(200);
	}
	
	public static void fun(int...a) {
		//this syntax tells the compiler that fun can be called with 0 or more arguments
		// as a result, a is explicitly declared as an array of ints
		System.out.println("Number of arguments: " + a.length);
	}
	public static void fun2(String s, int...a) {
		//takes in a single string and any number of ints
		System.out.println("String: " + s);
		System.out.println("Number of argumnets: " + a.length);
	}
	//there can only be one variable argument in a method and it must be the last argument
}
